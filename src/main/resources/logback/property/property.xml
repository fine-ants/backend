<?xml version="1.0" encoding="UTF-8"?>
<included>
    <!-- log file path -->
    <property name="LOG_PATH" value="logs/"/>
    <!-- log file name -->
    <property name="LOG_FILE_NAME" value="logs"/>
    <!-- err log file name -->
    <property name="ERR_LOG_FILE_NAME" value="err_log"/>
    <!-- pattern -->
    <property name="LOG_PATTERN" value="%d{ISO8601} %-5level [%thread] [%X{traceId}] %logger{36}:%line - %msg %n"/>
    <!-- 파일 경로 및 파일 이름 패턴 설정 -->
    <property name="LOG_FILE_PATTERN" value="${LOG_PATH}/${LOG_FILE_NAME}.%d{yyyy-MM-dd}_%i.log"/>
    <!-- 파일 경로 및 에러 로그 파일 이름 패턴 설정 -->
    <property name="ERROR_LOG_FILE_PATTERN" value="${LOG_PATH}/${ERR_LOG_FILE_NAME}.%d{yyyy-MM-dd}_%i.log"/>
    <!-- 최대 파일 사이즈 -->
    <property name="MAX_FILE_SIZE" value="1GB"/>
    <!-- 최대 내역 일수 -->
    <property name="MAX_HISTORY_DAYS" value="7"/>
    <!-- CHARSET -->
    <property name="CHARSET" value="UTF-8"/>
</included>
